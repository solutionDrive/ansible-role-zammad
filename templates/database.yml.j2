default: &default
  pool: 50
  timeout: 5000
  encoding: utf8

  {% if zammad_db_mysql %}
  adapter: mysql2
  {% endif %}
  {% if zammad_db_postgresql %}
  adapter: postgresql
  {% endif %}
  host: {{ zammad_db_host }}
  port: {{ zammad_db_port }}
  username: {{ zammad_db_username }}
  password: {{ zammad_db_password }}

production:
  <<: *default
  database: {{ zammad_db_name }}
